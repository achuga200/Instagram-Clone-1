  <div class="col-md-4">
    <div class="post">
        <%= image_tag post.picture.url(:medium), class: 'uploaded-pic' %>
        <h3>
          <%= post.description %>
        </h3>
        <h4><span class="label label-info">
           <% if post.tags.any? %>
          <% post.tags.each do |tag| %>
            <%= link_to tag.name, "/tags/#{tag.name.sub('#', '')}", class: 'tags-link'%>
          <% end %>
          <%else%>
          no tags
          <%end%>
        </span></h4>
        <h6><%=link_to_if post.comments.any?, "#{ pluralize(post.comments.count, 'comment')}", '#', data: { 'post-url' => post_path(post, format: :json )}, class: 'comment-link' %></h6>
        <ul class="comments">
        </ul>
        <%= link_to 'Add Comment', new_post_comment_path(post) %> |
        <%= link_to 'Delete Post', post_path(post),  method: :delete %> |
        <%= link_to 'BUY ME', new_post_charge_path(post) %> |
        <%= link_to 'Map', post_map_path(post) %>
     </div>
  </div>
